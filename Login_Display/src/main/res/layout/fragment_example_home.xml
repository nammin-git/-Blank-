<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExampleHomeFragment">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/search_icon"
        android:background="@color/purple_700"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="친구를 찾아보세요."
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/logo"
        android:layout_toLeftOf="@+id/gear" />

    <ImageButton
        android:id="@+id/gear"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/search_icon"
        android:background="@color/purple_700"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter" />


    <ImageView
        android:id="@+id/mainimage"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/search_icon"
        android:background="@color/purple_200" />

    <LinearLayout
        android:id="@+id/function_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainimage">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/search_icon"
            android:background="@color/teal_700"
            android:scaleType="fitCenter" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/search_icon"
            android:background="@color/black"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <TextView
        android:id="@+id/snsmain"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/function_nav"
        android:text="오늘은 레이아웃으로 SNS 화면을 만들어보았습니다."
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/snsmain">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/search_icon"
            android:background="@color/teal_700" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Codnet"
            android:layout_gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:layout_gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수고하셨습니다. ^^"
            android:layout_gravity="center" />
    </LinearLayout>



</RelativeLayout>